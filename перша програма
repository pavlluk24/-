#include <stdio.h>
int main(void)
{
    int height;
    int spaces;
    int hashes;
    
do
    {
    
        height=get_int("Height:");
    }
    while ( height<1||height>8);
    for ( int i=1; i<=height; i++)
    {
        for (spaces=(height-1); spaces>0: spaces--)
        {
            printf(" ");
        }
        for ( hahses=1; hashes <=(i); hashes++)
        {
            printf("#");
        }
        printf("\n");
     }
     return 0;
 )
    print spaces
    print hashes\n
 }
